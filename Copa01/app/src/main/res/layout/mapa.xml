<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backclaro"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="450dp"
        android:layout_height="250dp"
        android:background="@color/white"
        android:layout_marginLeft="25dp"
        android:elevation="10dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/estadodois" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/txtpermissao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="345dp"
        android:layout_marginBottom="367dp"
        android:text="@string/txtpermissao"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="194dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btnmapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="fill"
        android:layout_marginStart="260dp"
        android:layout_marginBottom="200dp"
        android:onClick="btnmapa"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="1dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:src="@drawable/mapa" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtlocaliza_o_atual"
                android:textAlignment="center"
                android:textColor="#009688"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnmapaestadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="fill"
        android:layout_marginStart="70dp"
        android:layout_marginTop="230dp"
        android:layout_marginBottom="200dp"
        android:onClick="btnmapaestadio"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="1dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:src="@drawable/mapa" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Localização Estádio"
                android:textAlignment="center"
                android:textColor="#009688"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="100dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_mapapramenu"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="50dp"
            android:layout_centerInParent="true"
            android:layout_width="80dp"
            android:layout_height="80dp">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/logo">

            </ImageView>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/graad_bg"></LinearLayout>

    </RelativeLayout>
</RelativeLayout>